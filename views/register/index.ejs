<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700&family=Bellefair&family=Barlow:wght@400;700&display=swap"
        rel="stylesheet">
    <link id="manifest-theme-link" rel="manifest" href="/manifest/manifest.webmanifest">
    <script src="/javascripts/themeSwitcher.js"></script>
    <link rel="stylesheet" href="/stylesheets/shared/index.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <title>REGISTER</title>
</head>

<body>
    <form action="/register" method="POST">
        <h3 class="text-white ff-serif fs-700 letter-spacing-1" style="font-weight: 500">TYR</h3>
        <% if (error) { %>
            <div id="error-container" class="ff-sans-normal letter-spacing-3 text-accent fs-300" style="text-align: center; margin-top: 1em;">
                <%= error %>
            </div>
            <% } %>

        <label for="name" class="ff-sans-normal letter-spacing-4 text-accent fs-400">Username</label>
        <input type="text" id="name" name="name" class="form__input" required autofocus placeholder="Username">

        <label for="email" class="ff-sans-normal letter-spacing-4 text-accent fs-400">E-Mail</label>
        <input type="email" id="email" name="email" class="form__input" placeholder="Email Address" required>

        <label for="password" class="ff-sans-normal letter-spacing-4 text-accent fs-400">Password</label>
        <input type="password" id="password" name="password" class="form__input" placeholder="Password" required>

        <label for="repeat-password" class="ff-sans-normal letter-spacing-4 text-accent fs-400">Confirm password</label>
        <input type="password" id="repeat-password" name="repeatPassword" class="form__input" placeholder="Repeat password" required>

        <button class="form-button" type="submit">REGISTER</button>
        <button class="form-button" id="google-btn">
            <div class="google-svg-container">

                <svg xmlns="http://www.w3.org/2000/svg" width="705.6" height="720"
                    viewBox="0 0 186.69 190.5" xmlns:v="https://vecta.io/nano">
                    <g transform="translate(1184.583 765.171)">
                        <path clip-path="none" mask="none"
                            d="M-1089.333-687.239v36.888h51.262c-2.251 11.863-9.006 21.908-19.137 28.662l30.913 23.986c18.011-16.625 28.402-41.044 28.402-70.052 0-6.754-.606-13.249-1.732-19.483z"
                            fill="#4285f4" />
                        <path clip-path="none" mask="none"
                            d="M-1142.714-651.791l-6.972 5.337-24.679 19.223h0c15.673 31.086 47.796 52.561 85.03 52.561 25.717 0 47.278-8.486 63.038-23.033l-30.913-23.986c-8.486 5.715-19.31 9.179-32.125 9.179-24.765 0-45.806-16.712-53.34-39.226z"
                            fill="#34a853" />
                        <path clip-path="none" mask="none"
                            d="M-1174.365-712.61c-6.494 12.815-10.217 27.276-10.217 42.689s3.723 29.874 10.217 42.689c0 .086 31.693-24.592 31.693-24.592-1.905-5.715-3.031-11.776-3.031-18.098s1.126-12.383 3.031-18.098z"
                            fill="#fbbc05" />
                        <path
                            d="M-1089.333-727.244c14.028 0 26.497 4.849 36.455 14.201l27.276-27.276c-16.539-15.413-38.013-24.852-63.731-24.852-37.234 0-69.359 21.388-85.032 52.561l31.692 24.592c7.533-22.514 28.575-39.226 53.34-39.226z"
                            fill="#ea4335" clip-path="none" mask="none" />
                    </g>
                </svg>
            </div>
        </button>
        <div class="login-link-container">
            <a href="/login" class="text-accent ff-sans-normal">Already have an Account? Log in</a>
        </div>

    </form>

<script>
    const googleBTN = document.getElementById("google-btn");

    googleBTN.addEventListener("click", e => {
        e.preventDefault();
        window.location.href = "/auth/google";
    })

    const errorContainer = document.getElementById("error-container");
    const errorText = errorContainer.textContent;
    console.log(errorText);

    errorContainer.innerHTML = errorText;
</script>

</html>